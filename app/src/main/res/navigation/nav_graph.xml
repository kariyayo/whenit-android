<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/eventListFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="info.bati11.whenit.ui.app.setting.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
    </fragment>

    <fragment
        android:id="@+id/licensesFragment"
        android:name="info.bati11.whenit.ui.app.license.LicensesFragment"
        android:label="fragment_licenses"
        tools:layout="@layout/fragment_licenses" >
    </fragment>

    <fragment
        android:id="@+id/eventListFragment"
        android:name="info.bati11.whenit.ui.app.event_list.EventListFragment"
        android:label="fragment_event"
        tools:layout="@layout/fragment_event_list" >
        <action
            android:id="@+id/action_eventFragment_to_eventCreateFragment"
            app:destination="@id/eventCreateFragment" />
        <action
            android:id="@+id/action_eventFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_eventFragment_to_licensesFragment"
            app:destination="@id/licensesFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventCreateFragment"
        android:name="info.bati11.whenit.ui.app.event_create.EventCreateFragment"
        android:label="fragment_event_create" >
        <action
            android:id="@+id/action_eventCreateFragment_to_eventFragment"
            app:destination="@id/eventListFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>